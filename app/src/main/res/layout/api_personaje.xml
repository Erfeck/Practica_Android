<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvApiNombre"
            style="@style/TEXTO"
            android:text="@string/strEjemplo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivApiImagen"
            android:layout_width="200dp"
            android:layout_height="300sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CARDVIEW"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="6dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/custom_gray"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tvApiKi"
                style="@style/TEXTO"
                android:text="@string/strEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:textSize="20sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CARDVIEW"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="6dp"
            android:outlineSpotShadowColor="@color/custom_gray"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/custom_gray"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tvApiMaxKi"
                style="@style/TEXTO"
                android:text="@string/strEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:textSize="20sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CARDVIEW"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="6dp"
            android:outlineSpotShadowColor="@color/custom_gray"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/custom_gray"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tvApiRaza"
                style="@style/TEXTO"
                android:text="@string/strEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:textSize="20sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CARDVIEW"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="6dp"
            android:outlineSpotShadowColor="@color/custom_gray"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/custom_gray"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tvApiGenero"
                style="@style/TEXTO"
                android:text="@string/strEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:textSize="20sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CARDVIEW"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="6dp"
            android:outlineSpotShadowColor="@color/custom_gray"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/custom_gray"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tvApiEquipo"
                style="@style/TEXTO"
                android:text="@string/strEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:textSize="20sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CARDVIEW"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="6dp"
            android:outlineSpotShadowColor="@color/custom_gray"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/custom_gray"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tvApiDescripcion"
                style="@style/TEXTO"
                android:text="@string/strEjemplo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:textSize="16sp" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>